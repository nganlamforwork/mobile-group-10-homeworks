<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>
    </item>

    <!-- RED Stripe -->
    <item
        android:bottom="100dp"
        android:left="-200dp">

        <rotate android:fromDegrees="140">

            <shape android:shape="line">

                <stroke
                    android:width="10dp"
                    android:color="@android:color/holo_blue_dark" />
            </shape>

        </rotate>
    </item>

    <!-- GREEN Stripe -->
    <item
        android:bottom="90dp"
        android:left="-100dp"
        android:right="-100dp">

        <rotate android:fromDegrees="140">

            <shape android:shape="line">

                <size android:width="200dp" />
                <stroke
                    android:width="10dp"
                    android:color="@android:color/holo_blue_dark" />
            </shape>
        </rotate>
    </item>

    <!-- BLUE Stripe -->
    <item
        android:left="-100dp"
        android:right="-100dp"
        android:top="90dp">

        <rotate android:fromDegrees="140">

            <shape android:shape="line">

                <stroke
                    android:width="10dp"
                    android:color="@android:color/holo_blue_dark" />
            </shape>
        </rotate>
    </item>

    <!-- ORANGE Stripe -->
    <item
        android:bottom="-50dp"
        android:left="50dp"
        android:right="-50dp"
        android:top="140dp">

        <rotate android:fromDegrees="140">

            <shape android:shape="line">

                <stroke
                    android:width="10dp"
                    android:color="@android:color/holo_blue_dark" />
            </shape>
        </rotate>
    </item>

</layer-list>
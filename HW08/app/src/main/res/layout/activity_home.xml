<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/capttion_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEWS APP"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- CardView for Thanh Nien -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_thanh_nien"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EFC9C9">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/thanhnien"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"/>

        </androidx.cardview.widget.CardView>

        <!-- CardView for VNExpress -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vnexpress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EFC9C9">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/vnexpress"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"/>

        </androidx.cardview.widget.CardView>

        <!-- CardView for Tuoi Tre -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tuoi_tre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EFC9C9">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tuoitre"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"/>

        </androidx.cardview.widget.CardView>

        <!-- Placeholder CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_placeholder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EFC9C9">
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>
